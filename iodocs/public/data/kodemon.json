{    
    "basePath": "http://localhost:4001",
    "name": "kodemon",
    "protocol": "rest",
    "publicPath": "/api/v1",
    "version": "1.0",
    "resources": {
        "Kodemon methods": {
            "methods": {
                "keys": {
                    "description": "This method returns list of all keys",
                    "httpMethod": "GET",
                    "name": "keys",
                    "parameters": {
                        
                    },
                    "path": "/keys"
                },
                "key": {
                    "description": "This method returns all messages for given key",
                    "httpMethod": "GET",
                    "name": "key",
                    "parameters": {
                        "key": {
                            "default": "test.py-test",
                            "description": "A key identity",
                            "location": "path",
                            "required": true,
                            "type": "string"
                        }
                    },
                    "path": "/key/{key}"
                },
                "KeyFromTake": {
                    "description": "This method allows you to retrieve fixed amount of messages for given key from given position",
                    "httpMethod": "GET",
                    "name": "keyfromtake",
                    "parameters": {
                        "key": {
                            "default": "test.py-test",
                            "description": "A key identity",
                            "required": true,
                            "type": "string"
                        },
                        "from" : {
                        	"default": "1",
                            "description": "Start position for from",
                            "required": true,
                            "type": "string"	
                        },
                        "take" : {
                        	"default": "5",
                            "description": "Amount to take",
                            "required": true,
                            "type": "string"	
                        }
                    },
                    "path": "/key/{key}/from/{from}/take/{take}"
                },
                "Count": {
                    "description": "This method returns messages count for key",
                    "httpMethod": "GET",
                    "name": "count",
                    "parameters": {
                        "key": {
                            "default": "test.py-test",
                            "description": "A key identity",
                            "location": "path",
                            "required": true,
                            "type": "string"
                        }
                    },
                    "path": "/key/{key}/count"
                },
                "GetLastNr": {
                    "description": "This method returns last messages for key with given number",
                    "httpMethod": "GET",
                    "name": "getlast",
                    "parameters": {
                        "key": {
                            "default": "test.py-test",
                            "description": "A key identity",
                            "location": "path",
                            "required": true,
                            "type": "string"
                        },
                        "lastNr" : {
                            "default": "5",
                            "description": "Number of messages",
                            "location": "path",
                            "required": true,
                            "type": "string"  
                        }
                    },
                    "path": "/key/{key}/getlast/{lastNr}"
                },
                "KeysTimeRange": {
                    "description": "This method returns last messages for key with given number",
                    "httpMethod": "POST",
                    "name": "keystimerange",

                    "parameters": {
                        "Content-Type": {
                            "type": "string",
                            "required": "true",
                            "description": "Content type of the payload",
                            "default": "application/json",
                            "location": "header"
                        },
                        "key": {
                            "default": "test.py-test",
                            "description": "A key identity",
                            "location": "body",
                            "required": true,
                            "type": "string"
                        },
                        "from" : {
                            "default": "2014-10-30T21:04:54.000Z",
                            "description": "Timestamp from",
                            "location": "body",
                            "required": true,
                            "type": "string"  
                        },
                        "to" : {
                            "default": "2014-10-30T21:10:54.000Z",
                            "description": "Timestamp to",
                            "location": "body",
                            "required": true,
                            "type": "string"  
                        }
                    },
                    "path": "/keys/timerange"
                }
            }
        }
        
    }
}
